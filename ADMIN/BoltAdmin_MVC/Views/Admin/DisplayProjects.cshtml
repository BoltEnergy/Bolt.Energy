        <li> <span>@ViewBag.UserName</span> </li>
        <li> <span>Projects</span> </li>
    </ul>

    <table width="100%" class="bolt_topic_list" border="0" cellspacing="0" cellpadding="0">
        <thead>
            <tr>
                <th align="left"> Project Title</th>
                @*<th width="250" align="left"> Posted On</th>*@
                <th width="100" align="left"> View </th>
                <th width="80"> Action </th>
            </tr>
        </thead>
        @if (Model == null || Model.Count() == 0)
        {


            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <div class="bolt-admin-no-comments"> No Projects</div>
                </tr>
            </table>

        }
        else
        {
            int count = 1;
            int index = 0;
            foreach (var d in Model)
            {

                <tbody>

                    <tr class="@(count%2==0? "bolt_bg_gray" : "none")">


                        <td align="left">
                            @if (@d.name != "")
                            {
                                <strong>@d.name</strong>
                            }
                            else
                            {
                                <strong>----</strong>
                            }



                        </td>
                        <td align="left" style="vertical-align:top;"><a href="#" id="@string.Concat("header",count)" onclick="sldeUpDown('@string.Concat("extend", count)' , '@string.Concat("header", count)')">View More..</a></td>
                        <td align="center" style="vertical-align:top;"><a href="javascript:;" onclick="deleteProjects('@d._id')"><img src="/images/icon-delete.png" /></a></td>

                    </tr>
                    <tr class="@(count%2==0? "bolt_bg_gray" : "none")">
                        <td colspan="3" style="padding:0px; border:none;">
                            <div id="@string.Concat("extend", count)" class="bolt_expnd">
                                <div class="bolt_two_coloum">
                                    <div class="bolt_left">
                                        <h4>Description</h4>
                                        <h5 class="scroll">@d.desc</h5>
                                        <h4>Availability</h4>
                                        @foreach (var item in @d.availability)
                                        {
                                            index++;
                                            <div id="item-@index"></div>
                                            <text>
                                                <script>
                                                    $('#item-@index').html('<span>' + objAvailability['@item'] + '</span>');
                                                </script>

                                            </text>
                                        }
                                    </div>
                                    <div class="bolt_right">
                                        <h4>Project Type</h4>
                                        <h5>@d.projectType</h5>
                                        <h4>Capacity</h4>
                                        <h5>@d.capacity</h5>
                                        <h4>Status</h4>
