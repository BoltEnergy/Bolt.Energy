@model IEnumerable<BoltAdmin_MVC.Models.Projects>

@{
    ViewBag.title = "Bolt.Energy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type='text/javascript'>
    function sldeUpDown(id, header) {
        if ($("#" + id).css('display') == 'block') {
            $("#" + id).slideUp('slow');
            $('#' + header).html('View More..');
        }
        else {
            $("#" + id).slideDown('slow');
            $('#' + header).html('View Less..');
        }
    }

    function deleteProjects(userID) {
        if (confirm("Please confirm to delete this Project")) {
            //alert("In Progress... " + userID);
            window.location.href = "/Admin/DeleteProjects/" + userID;
        }
        return false;
    }

    function GoToHome() {
        //alert("In Progress... " + userID);
        window.location.href = "/Admin/Index/";

        return false;
    }

    $(document).ready(function () {
        $('.bolt_tabs li a').eq(2).addClass('active');
    });

</script>

